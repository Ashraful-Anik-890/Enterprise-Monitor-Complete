{
  "name": "enterprise-monitor",
  "version": "1.0.0",
  "description": "Enterprise Employee Monitoring System",
  "main": "dist/main/main.js",
  "author": "Ashraful Anik",
  "license": "PROPRIETARY",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "xcopy /Y /I src\\renderer\\index.html dist\\renderer\\ && xcopy /Y src\\renderer\\renderer.js dist\\renderer\\",
    "watch": "tsc --watch",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --win --x64",
    "dist:dir": "npm run build && electron-builder --win --x64 --dir"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.ashraful.enterprise-monitor",
    "productName": "Enterprise Monitor",
    "copyright": "Developed by Ashraful Anik",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Enterprise Monitor"
    },
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*",
          "!*.md"
        ]
      }
    ]
  }
}
